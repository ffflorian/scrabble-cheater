{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "dom",
      "es2018"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": false,
    "strict": true,
    "target": "ES6"
  },
  "exclude": [
    "dist",
    "node_modules",
    "spec"
  ]
}
